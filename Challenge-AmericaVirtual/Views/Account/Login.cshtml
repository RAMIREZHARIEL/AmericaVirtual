
@{
    ViewBag.Title = "Login";
}
@Scripts.Render("~/Scripts/main.js")
<div class="form-group">
    <div id="modalLogin" class="modal fade" role="form" aria-hidden="true" style="display:none">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Ingrese en America Virtual!</h5>
            </div>
            <div class="modal-body">
                <div id="modal-content">
                    <form id="formLogin" >
                        <div class="form-group">
                            <label>Usuario</label><br>
                            <input type="email" autofocus name="user" required class="input-group-sm" placeholder="Usuario" />
                        </div>
                        <div class="form-group">
                            <label>Contraseña</label><br>
                            <input type="password" name="password" required placeholder="Contraseña" />
                        </div>
                        <div class="form-group">
                            <br />
                            <button id="btnConfirmLogin" name="btnConfirmLogin" onclick="ConfirmLogin()" class="btn btn-block btn-sm"> INGRESAR! </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



