
@{ 
    List<Challenge_AmericaVirtual.Models.City> CityList = Challenge_AmericaVirtual.Services.ZoneServices.CityList(ViewBag.CountrySelected);
}

<label> Ciudad</label>
<br />

<!-- <form action="/WeatherSearch" method="get">-->
<div class="form-group">
    <select class="custom-select" id="CitySelected" name="CitySelected">
        <option class="optionSelect"> Seleccione una ciudad </option>
        @if (CityList != null)
        {
            foreach (var city in CityList)
            {
                <option class="optionSelect" value="@city.name"> @city.name</option>
            }
        }
        else
        {
            <option class="optionSelect" selected> Seleccione una ciudad</option>
        }
    </select>
</div>

