
@{

    var Forecast = ViewBag.Forecast;
    double Fahrenheit = 0;
    if (Forecast != null)
    {
        Fahrenheit = (Forecast.daily[0].temp.day * 1.8) + 32;
    }
    ViewBag.Title = "ShowWeather";
}
@{ if (Forecast != null)
    {
<div class="cardFirstRow">
    <div class="card-header text-center">
        <h4 class="title">El Tiempo</h4>
    </div>
    <div class=" card-body ">

        <div class="row vert">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <h6 class="pais"> @ViewBag.CountrySelected</h6>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h6 class="ciudad"> @ViewBag.CitySelected</h6>

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h6 class="Temperatura"> °C: @Forecast.daily[0].temp.day </h6>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h6 class="TemperaturaF"> °F: @Fahrenheit</h6>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                    </div>
                </div>

            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <h6 class="Dia"> @DateTime.Now.DayOfWeek.ToString()  /  @Forecast.daily[0].weather[0].main</h6>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <img class="imgCenter" id="imgWeather" src="@Forecast.daily[0].weather[0].icon" />

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h6 class="botom">Presion: @Forecast.daily[0].pressure </h6>
                        <h6 class="botom">Viento: @Forecast.daily[0].wind_speed km/h</h6>
                        <h6 class="botom"> Humedad: @Forecast.daily[0].humidity   %</h6>

                    </div>
                </div>



            </div>
        </div>
    </div>
</div>
                }

                }
